<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:id="@+id/mainLayout"
    android:background="@drawable/border2"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:text="dd/mmm/year hh:mm:ss"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/category1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_alignStart="@+id/time"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"

        android:layout_marginTop="22dp"
        android:background="@drawable/border"
        android:layout_marginBottom="10dp"
        android:text="Category: Food"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/description1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category1"
        android:layout_alignStart="@+id/time"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        android:layout_marginTop="44dp"
        android:background="@drawable/border"
        android:layout_marginBottom="10dp"
        android:text="Description: Chai Stall 100 rupess"
        android:textSize="14sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/description1"
        android:id="@+id/tr"
        android:layout_marginBottom="-20dp"/>
    <TextView
        android:id="@+id/money1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tr"
        android:layout_alignStart="@+id/category1"
        android:layout_marginTop="0dp"
        android:textColor="@color/black"
        android:text="Total Money Spent: 300" />
    <TextView
        android:id="@+id/members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tr"
        android:layout_alignStart="@+id/category1"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="Money spent on 3 people" />
    <TextView
        android:id="@+id/members1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:text="Click to download receipt/bill if any" />
</RelativeLayout>
