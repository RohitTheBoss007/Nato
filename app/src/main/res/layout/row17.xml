<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:id="@+id/mainLayout"
    android:background="@drawable/border2"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/category1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_alignStart="@+id/time"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"

        android:layout_marginTop="4dp"
        android:background="@drawable/border"
        android:layout_marginBottom="10dp"
        android:text="Place of Visit: Dehradun"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/description1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category1"
        android:layout_alignStart="@+id/category1"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:textColor="@color/black"
        android:layout_marginTop="22dp"
        android:background="@drawable/border"
        android:layout_marginBottom="10dp"
        android:text="Description: BirthDay Party"
        android:textSize="14sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:layout_alignBottom="@+id/description1"
        android:id="@+id/tr"
        android:layout_marginBottom="-20dp"/>
    <TextView
        android:id="@+id/startingDate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tr"
        android:layout_alignStart="@+id/category1"
        android:layout_marginTop="0dp"
        android:textColor="@color/black"
        android:text="Starting Date: 17-08-2000" />
    <TextView
        android:id="@+id/endingDate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tr"
        android:layout_alignStart="@+id/category1"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="End Date: 18-08-2000" />
    <TextView
        android:id="@+id/by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tr"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:text="Added By: Ujjawal" />
    <TextView
        android:id="@+id/average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tr"
        android:layout_marginTop="40dp"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        android:text="Average Rating : 3.0" />

    <ImageButton
        android:id="@+id/qwe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:src="@drawable/ic_dialog_close_light" />

</RelativeLayout>
